						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/grading/teacher/course/:course_id/table/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"grading",
								"teacher",
								"course",
								":course_id",
								"table",
								""
							],
							"variable": [
								{
									"key": "course_id",
									"value": "1",
									"description": "ID of the course"
								}
							]
